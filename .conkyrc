out_to_console yes
out_to_x no
update_interval 1
temperature_unit celsius



TEXT
^tw() \
${if_match "${acpiacadapter}" == "on-line"} ^i(/home/adam/.xmonad/ac_01.xbm) $battery_time $endif \
${if_match "${acpiacadapter}" != "on-line"} ^i(/home/adam/.xmonad/bat_low_01.xbm) $battery_time $endif\
|\
${if_match $cpu > 70} ^fg(red) ${endif}\
^i(/home/adam/.xmonad/cpu.xbm) $cpu \
${if_match $cpu > 70} ^fg() ${endif}\
${if_match $memperc > 70} ^fg(red) ${endif}\
^i(/home/adam/.xmonad/mem.xbm) ${memperc}% \
${if_match $memperc > 70} ^fg() ${endif}\
^i(/home/adam/.xmonad/diskette.xbm) ${fs_free}  \
^i(/home/adam/.xmonad/calendar.xbm) ${time %m/%d %H:%M} \
^i(/home/adam/.xmonad/spkr_01.xbm)\
${execi 10 amixer -c 0 get Master | grep Mono: | cut -d " " -f6 | cut -c 2,3} \
| ^i(/home/adam/dotfiles/mail.xbm) \
${unseen_mails /home/adam/Maildir/Professional/INBOX} \
: ${unseen_mails /home/adam/Maildir/Personal/INBOX} \
: ${unseen_mails /home/adam/Maildir/Work/INBOX} 
