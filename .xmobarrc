Config { font = "-misc-fixed-*-*-*-*-12-*-*-*-*-*-*-*"
       , borderColor = "black"
       , border = TopB
       , bgColor = "black"
       , fgColor = "grey"
       , position = Bottom
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [ Run Weather "EGCC" ["-t","<station>: <tempC>C",
                                          "-L","18","-H","25",
                                          "--normal","green",
                                          "--high","red",
                                          "--low","lightblue"] 36000
                    , Run Network "eno1" ["-L","0","-H","32",
                                          "--normal","green","--high","red",
					  "-t","<rx>KB | <tx>KB"] 10
                    , Run Cpu ["-L","3","-H","50",
                               "--normal","green","--high","red",
			       "-t","<total>%"] 10
                    , Run Memory ["-t","<usedratio>%"] 10
                    , Run Swap ["-t","<usedratio>%"] 10
                    , Run Com "uname" ["-s","-r"] "" 36000
    		    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
		    , Run Mail [("Personal ","~/Maildir/Personal/INBOX"),
                                ("Professional ","~/Maildir/Professional/INBOX"),
                                ("Work ","~/Maildir/Work/INBOX")] "mail"
		    , Run DiskU [("/", "<free>"),("/home","<free>")] ["-L", "20", "-H", "50", "-m", "1", "-p", "3"] 20
		    , Run Com "/home/adam/dotfiles/reddit.py" [] "reddit" 100
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "<icon=/home/adam/dotfiles/cpu.xbm/> %multicpu% <icon=/home/adam/dotfiles/mem.xbm/> %memory% * %swap% | %eno1% | <icon=/home/adam/dotfiles/diskette.xbm/> %disku% | %mail% | %reddit%}\ %StdinReader% \{ <fc=#ee9a00><icon=/home/adam/dotfiles/calendar.xbm/>%date%</fc>| %EGCN% | %uname%"
       }
