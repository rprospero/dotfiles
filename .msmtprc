# Example for a user configuration file

# Set default values for all following accounts.
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile ~/.msmtp.log

# # A freemail service
# account freemail
# host smtp.freemail.example
# from joe_smith@freemail.example
# auth on
# user joe.smith
# password secret

# # A second mail address at the same freemail service
# account freemail2 : freemail
# from joey@freemail.example

# # The SMTP server of the provider.
# account provider
# host mail.provider.example
# from smithjoe@provider.example
# auth on
# user 123456789
# passwordeval gpg -d ~/.msmtp.password.gpg

# # Set a default account
# account default : provider

account personal
host smtp.gmail.com
port 587
from rprospero@gmail.com
auth on
user rprospero@gmail.com
passwordeval gpg --quiet -d ~/.sec/personal.gpg

account work
host smtp.gmail.com
port 587
from a.washington@sheffield.ac.uk
auth on
user a.washington@sheffield.ac.uk
passwordeval gpg --quiet -d ~/.sec/work.gpg

account professional
host smtp.gmail.com
port 587
from adam.l.washington@gmail.com
auth on
user adam.l.washington@gmail.com
passwordeval gpg --quiet -d ~/.sec/.professional.gpg


account default : work